<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qscftyjm.calendar.ChangePasswordActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="我们需要验证你的身份信息："
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="账号"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/radius" />

        <EditText
            android:id="@+id/change_account"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:background="@drawable/radius"
            android:inputType="text" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="旧密码"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/radius" />

        <EditText
            android:id="@+id/change_old_password"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:lines="1"
            android:background="@drawable/radius" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="新密码"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/radius" />

        <EditText
            android:id="@+id/change_new_password"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textPassword"
            android:lines="1"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="确认密码"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/radius" />

        <EditText
            android:id="@+id/change_password_confirm"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textPassword"
            android:lines="1"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/submit_change_password"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/radius"
            android:layout_gravity="center_horizontal"
            android:text="确认修改密码" />

    </LinearLayout>

</LinearLayout>
